    "from flask import Flask, jsonify ,request, render_template\n",
    "import pyodbc\n",
    "from datetime import datetime\n",
    "\n",
    "app = Flask(__name__)\n",
    "\n",
    "server = 'localhost\\SQLEXPRESS' \n",
    "database = 'EcommerceDB'       \n",
    "username = 'sa'\n",
    "password = 'sa'\n",
    "driver = '{ODBC Driver 17 for SQL Server}'\n",
    "\n",
    "conn = pyodbc.connect(\n",
    "    f'DRIVER={driver};SERVER={server};DATABASE={database};UID={username};PWD={password}')\n",
    "\n",
    "cursor = conn.cursor() \n",
    "\n",
    "@app.route('/')\n",
    "def home():\n",
    "    return render_template(\"html.html\")\n",
    "\n",
    "@app.route(\"/products\", methods=[\"GET\"])\n",
    "def view_products():\n",
    "    cursor.execute(\"select * from Products\")\n",
    "    prods = cursor.fetchall()\n",
    "    products = []   \n",
    "    for prod in prods:  \n",
    "        products.append({\n",
    "            \"id\": prod[0], \n",
    "            \"name\": prod[1],\n",
    "            \"price\": prod[2],\n",
    "            \"quantity\": prod[3]\n",
    "        })\n",
    "    return jsonify(products)\n",
    "\n",
    "@app.route(\"/products\", methods=[\"post\"])\n",
    "def add_product():\n",
    "    data = request.json\n",
    "    cursor.execute('''insert into Products (name, price, quantity) values (?, ?, ?)''', \n",
    "                  (data[\"name\"], data[\"price\"], data[\"quantity\"]))\n",
    "    conn.commit()  \n",
    "    return jsonify({\"message\": \"Product added successfully!\"})\n",
    "\n",
    "@app.route('/products/<int:product_id>', methods=['PUT'])\n",
    "def update_product(product_id):\n",
    "    data = request.get_json()\n",
    "    new_name = data.get(\"name\")\n",
    "    new_price = data.get(\"price\")\n",
    "    new_quantity = data.get(\"quantity\")\n",
    "\n",
    "    cursor.execute(\"\"\"\n",
    "        update products\n",
    "        set name = ?, price = ?, quantity = ?\n",
    "        where product_id = ?\n",
    "    \"\"\", (new_name, new_price, new_quantity, product_id))\n",
    "    conn.commit()\n",
    "\n",
    "    return jsonify({\"message\": \"Product updated successfully\"})\n",
    "\n",
    "@app.route('/products/<int:product_id>', methods=['DELETE'])\n",
    "def delete_product(product_id):\n",
    "    cursor.execute(\"delete from products where product_id = ?\", (product_id,))\n",
    "    conn.commit()\n",
    "    return jsonify({\"message\": \"Product deleted successfully\"})\n",
    "\n",
    "@app.route(\"/customers\", methods=[\"GET\"])\n",
    "def view_Customers():\n",
    "    cursor.execute(\"select * from Customers\")\n",
    "    custs = cursor.fetchall()\n",
    "    customers = []   \n",
    "    for cust in custs:  \n",
    "        customers.append({\n",
    "            \"id\": cust[0], \n",
    "            \"name\": cust[1],\n",
    "            \"email\": cust[2],\n",
    "            \"phone\": cust[3]\n",
    "        })\n",
    "    return jsonify(customers)\n",
    "\n",
    "@app.route(\"/customers\", methods=[\"POST\"])\n",
    "def add_customer():\n",
    "    data = request.json\n",
    "    cursor.execute(\n",
    "        \"insert into Customers (name, email, phone) values (?, ?, ?)\",\n",
    "        (data[\"name\"], data[\"email\"], data[\"phone\"])\n",
    "    )\n",
    "    conn.commit()\n",
    "    return jsonify({\"message\": \"Customer added successfully!\"})\n",
    "\n",
    "@app.route('/customers/<int:customer_id>', methods=['PUT'])\n",
    "def update_customer(customer_id):\n",
    "    data = request.json\n",
    "    name = data.get('name')\n",
    "    email = data.get('email')\n",
    "    phone = data.get('phone')  \n",
    "\n",
    "    cursor.execute(\"\"\"\n",
    "        update Customers\n",
    "        set name = ?, email = ?, phone = ?\n",
    "        where customer_id = ?\n",
    "    \"\"\", (name, email, phone, customer_id))\n",
    "    conn.commit()\n",
    "\n",
    "    return jsonify({\"message\": \"Customer updated successfully\"})\n",
    "\n",
    "@app.route('/customers/<int:customer_id>', methods=['DELETE'])\n",
    "def delete_customer(customer_id):\n",
    "    cursor.execute(\"delete from Customers where customer_id = ?\", (customer_id,))\n",
    "    conn.commit()\n",
    "    return jsonify({\"message\": \"Customer deleted successfully\"})\n",
    "\n",
    "\n",
    "\n",
    "@app.route(\"/orders\", methods=[\"GET\"])\n",
    "def view_Orders():\n",
    "    cursor.execute('''select o.order_id, c.name, o.total, o.order_date\n",
    "                      from Orders o\n",
    "                      join Customers c ON o.customer_id = c.customer_id ''')\n",
    "    ords = cursor.fetchall()\n",
    "    Orders = []   \n",
    "    for ord in ords:  \n",
    "        Orders.append({\n",
    "            \"id\": ord[0], \n",
    "            \"name\": ord[1],\n",
    "            \"total\": ord[2],\n",
    "            \"order_date\": ord[3]\n",
    "        })\n",
    "    return jsonify(Orders)\n",
    "\n",
    "@app.route(\"/orders\", methods=[\"POST\"])\n",
    "def create_order():\n",
    "    data = request.get_json()  # <-- هذا أفضل من request.json\n",
    "    if not data:\n",
    "        return jsonify({\"error\": \"No input data provided\"}), 400\n",
    "\n",
    "    customer_id = data.get(\"customer_id\")\n",
    "    products = data.get(\"products\", [])\n",
    "\n",
    "    if not products:\n",
    "        return jsonify({\"error\": \"No products selected\"}), 400\n",
    "\n",
    "    total_price = 0\n",
    "    products_order = []\n",
    "\n",
    "    for item in products:\n",
    "        cursor.execute(\"SELECT product_id, price, quantity FROM Products WHERE product_id = ?\", (item[\"product_id\"],))\n",
    "        p = cursor.fetchone()\n",
    "        if not p:\n",
    "            return jsonify({\"error\": f\"Product {item['product_id']} not found\"}), 400\n",
    "        product_id, price, available_qty = p\n",
    "        if available_qty < item[\"quantity\"]:\n",
    "            return jsonify({\"error\": f\"Not enough stock for product {item['product_id']}\"}), 400\n",
    "        total_price += price * item[\"quantity\"]\n",
    "        new_quantity = available_qty - item[\"quantity\"]\n",
    "        cursor.execute(\"UPDATE Products SET quantity = ? WHERE product_id = ?\", (new_quantity, product_id))\n",
    "        products_order.append((product_id, item[\"quantity\"], price))\n",
    "\n",
    "    order_date = datetime.now().date()\n",
    "    cursor.execute(\"INSERT INTO Orders (customer_id, total, order_date) VALUES (?, ?, ?)\",\n",
    "                   (customer_id, total_price, order_date))\n",
    "    conn.commit()\n",
    "\n",
    "    cursor.execute(\"SELECT TOP 1 order_id FROM Orders ORDER BY order_id DESC\")\n",
    "    order_id = cursor.fetchone()[0]\n",
    "\n",
    "    for product_id, quantity, price in products_order:\n",
    "        cursor.execute(\"INSERT INTO Order_Items (order_id, product_id, quantity, price) VALUES (?, ?, ?, ?)\",\n",
    "                       (order_id, product_id, quantity, price))\n",
    "    conn.commit()\n",
    "\n",
    "    return jsonify({\"message\": \"Order created successfully\", \"order_id\": order_id})\n",
    "\n",
    "\n",
    "@app.route('/orders/<int:order_id>', methods=[\"GET\"])\n",
    "def view_Orders_items(order_id):\n",
    "    cursor.execute('''select oi.product_id, p.name, oi.quantity, oi.price\n",
    "                      from Order_Items oi\n",
    "                      join Products p ON oi.product_id = p.product_id\n",
    "                      where oi.order_id = ?''', (order_id,))\n",
    "    its = cursor.fetchall()\n",
    "    items = []  \n",
    "    total_price = 0  \n",
    "    for it in its:  \n",
    "        line_total = it[2] * it[3]\n",
    "        total_price += line_total\n",
    "        items.append({\n",
    "            \"product_id\": it[0],\n",
    "            \"name\": it[1],\n",
    "            \"quantity\": it[2],\n",
    "            \"price\": it[3],\n",
    "            \"line_total\": line_total\n",
    "        })\n",
    "    return jsonify({\n",
    "        \"order_id\": order_id,\n",
    "        \"total\": total_price,\n",
    "        \"items\": items\n",
    "    })\n",
    "\n",
    "\n",
    "if __name__ == '__main__':\n",
    "    app.run(debug=True, port=5001, use_reloader=False)"
   ]
